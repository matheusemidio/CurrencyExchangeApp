<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="#4C5F8F"

    >

    <TextView
        android:id="@+id/tvTtile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Exchange App"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="172dp"
        app:layout_constraintBottom_toTopOf="@id/ivIcon"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="294dp"
        android:layout_height="212dp"
        app:srcCompat="@drawable/currencyicon"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="259dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Matheus Cadena"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="643dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>